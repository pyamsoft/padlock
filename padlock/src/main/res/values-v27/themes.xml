<resources>

  <!-- Normal App Theme -->
  <style name="Theme.PadLock.Light.Normal" parent="@style/Base.Theme.PadLock.Light.Normal">
    <item name="android:statusBarColor">@color/white</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:windowLightNavigationBar">false</item>
  </style>

  <!-- Lock Screen Theme -->
  <style name="Theme.PadLock.Light.Lock" parent="@style/Base.Theme.PadLock.Light.Lock">
    <item name="android:statusBarColor">@color/blue700</item>
    <item name="android:windowLightStatusBar">false</item>
    <item name="android:windowLightNavigationBar">false</item>
  </style>

  <!-- Splash screen -->
  <style name="Theme.PadLock.Light.Splash" parent="@style/Base.Theme.PadLock.Light.Splash">
    <item name="android:statusBarColor">@color/white</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:windowLightNavigationBar">false</item>
  </style>

  <style name="Theme.PadLock.Light.Transparent" parent="@style/Base.Theme.PadLock.Light.Transparent">
    <item name="android:windowLightStatusBar">false</item>
    <item name="android:windowLightNavigationBar">false</item>
  </style>

</resources>
