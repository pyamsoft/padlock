<resources>

  <style name="Base.Theme.PadLock.Dark" parent="@style/Theme.MaterialComponents.NoActionBar">
    <item name="colorPrimary">@color/blue500</item>
    <item name="colorPrimaryDark">@color/blue700</item>
    <item name="colorAccent">@color/blue500</item>
    <item name="android:navigationBarColor">@color/blue700</item>
    <item name="dialogTheme">@style/Theme.PadLock.Dark.Dialog</item>
    <item name="alertDialogTheme">@style/Theme.PadLock.Dark.Dialog</item>
  </style>

  <!-- Lock Screen Theme -->
  <style name="Base.Theme.PadLock.Dark.Lock" parent="@style/Base.Theme.PadLock.Dark">
    <item name="android:windowBackground">@color/blue700</item>
    <item name="colorAccent">@color/white</item>
  </style>

  <!-- Transparent Activity -->
  <style name="Base.Theme.PadLock.Dark.Transparent" parent="@style/Base.Theme.PadLock.Dark">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@color/transparent</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
    <item name="android:windowTranslucentStatus">true</item>
  </style>

  <!-- Normal App Theme -->
  <style name="Base.Theme.PadLock.Dark.Normal" parent="@style/Base.Theme.PadLock.Dark">
    <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    <item name="android:windowBackground">@color/dark_background</item>
  </style>

  <style name="Theme.PadLock.Dark.Normal" parent="@style/Base.Theme.PadLock.Dark.Normal"/>

  <!-- Lock Screen Theme -->
  <style name="Theme.PadLock.Dark.Lock" parent="@style/Base.Theme.PadLock.Dark.Lock"/>

  <style name="ThemeOverlay.PadLock.Dark.Lock" parent="@style/ThemeOverlay.AppCompat">
    <item name="android:colorControlActivated">@color/blue700</item>
    <item name="android:colorControlHighlight">@color/blue500</item>
    <item name="android:colorControlNormal">@color/grey300</item>
  </style>

  <style name="Theme.PadLock.Dark.Transparent" parent="@style/Base.Theme.PadLock.Dark.Transparent"/>

</resources>
