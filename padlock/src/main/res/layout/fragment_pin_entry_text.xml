<layout>

  <ScrollView
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="16dp"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/pin_entry_code"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:hint="@string/lock_code_hint"
          >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pin_entry_code_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

      </com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/pin_reentry_code"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:hint="@string/reenter_lock_code_hint"
          >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pin_reentry_code_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

      </com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/pin_hint"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:hint="@string/optional_lock_code_hint"
          >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pin_hint_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:imeOptions="actionGo"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            />

      </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
  </ScrollView>
</layout>
