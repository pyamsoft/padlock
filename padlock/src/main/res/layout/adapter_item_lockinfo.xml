<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="8dp"
      >

    <RadioGroup
        android:id="@+id/lock_info_tristate_radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        >

      <RadioButton
          android:id="@+id/lock_info_radio_default"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />

      <RadioButton
          android:id="@+id/lock_info_radio_white"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />

      <RadioButton
          android:id="@+id/lock_info_radio_black"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />

    </RadioGroup>

    <com.pyamsoft.pydroid.ui.widget.NoLeakTextView
        android:id="@+id/lock_info_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@id/lock_info_tristate_radiogroup"
        android:clickable="false"
        android:focusable="false"
        android:gravity="start|center_vertical"
        android:longClickable="false"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />

  </RelativeLayout>

</layout>
