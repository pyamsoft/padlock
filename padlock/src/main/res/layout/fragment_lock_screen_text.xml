<layout>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:orientation="horizontal"
      android:paddingTop="32dp"
      >


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

      <android.support.design.widget.TextInputLayout
          android:id="@+id/lock_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:hint="@string/lock_code_hint"
          >

        <com.pyamsoft.pydroid.design.widget.NoLeakTextInputEditText
            android:id="@+id/lock_text_entry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            />

      </android.support.design.widget.TextInputLayout>

      <com.pyamsoft.pydroid.ui.widget.NoLeakTextView
          android:id="@+id/lock_display_hint"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:textColor="@color/material_light_background"
          />

    </LinearLayout>

    <com.pyamsoft.pydroid.ui.widget.SquareImageView
        android:id="@+id/lock_image_go"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/blank"
        />

  </LinearLayout>
</layout>