<layout>
  <android.support.constraint.ConstraintLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:id="@+id/linearLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:minHeight="56dp"
      >

    <ImageView
        android:id="@+id/lock_list_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:clickable="false"
        android:contentDescription="@string/blank"
        android:focusable="false"
        android:longClickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lock_list_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/lock_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_vertical"
        android:longClickable="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lock_list_white"
        app:layout_constraintStart_toEndOf="@+id/lock_list_icon"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/lock_list_white"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/blank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lock_list_locked"
        app:layout_constraintStart_toEndOf="@+id/lock_list_title"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/lock_list_locked"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:contentDescription="@string/blank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lock_list_toggle"
        app:layout_constraintStart_toEndOf="@+id/lock_list_white"
        app:layout_constraintTop_toTopOf="parent"
        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/lock_list_toggle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:paddingStart="8dp"
        android:paddingTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lock_list_locked"
        app:layout_constraintTop_toTopOf="parent"
        />

  </android.support.constraint.ConstraintLayout>
</layout>
