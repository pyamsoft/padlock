<layout>

  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingBottom="8dp"
      android:paddingEnd="16dp"
      android:paddingStart="16dp"
      android:paddingTop="8dp"
      >

    <ImageView
        android:id="@+id/lock_list_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:clickable="false"
        android:contentDescription="@string/blank"
        android:focusable="false"
        android:longClickable="false"
        tools:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/lock_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_vertical"
        android:longClickable="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="?android:attr/textColorPrimary"
        tools:text="PadLock Example Application"
        />

    <ImageView
        android:id="@+id/lock_list_white"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/blank"
        tools:src="@drawable/ic_whitelisted"
        />

    <ImageView
        android:id="@+id/lock_list_locked"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/blank"
        tools:src="@drawable/ic_hardlocked"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/lock_list_toggle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:checked="true"
        />

  </LinearLayout>
</layout>
