<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <com.pyamsoft.pydroid.ui.preference.SwitchPreferenceCompat
      android:defaultValue="@bool/dark_mode_default"
      android:key="@string/dark_mode_key"
      android:summaryOff="@string/dark_mode_summary_off"
      android:summaryOn="@string/dark_mode_summary_on"
      android:title="@string/dark_mode_title"
      app:iconCompat="@drawable/ic_warning_24dp"/>

  <PreferenceCategory android:title="Service Settings">

    <com.pyamsoft.pydroid.ui.preference.ListPreferenceCompat
        android:defaultValue="@string/ignore_time_default"
        android:dialogTitle="@string/ignore_time_title"
        android:entries="@array/ignore_time"
        android:entryValues="@array/ignore_time_entries"
        android:key="@string/ignore_time_key"
        android:summary="@string/ignore_time_summary"
        android:title="@string/ignore_time_title"
        app:iconCompat="@drawable/ic_redo_24dp"/>

    <com.pyamsoft.pydroid.ui.preference.ListPreferenceCompat
        android:defaultValue="@string/timeout_time_default"
        android:dialogTitle="@string/timeout_time_title"
        android:entries="@array/timeout_time"
        android:entryValues="@array/timeout_time_entries"
        android:key="@string/timeout_time_key"
        android:summary="@string/timeout_time_summary"
        android:title="@string/timeout_time_title"
        app:iconCompat="@drawable/ic_timelapse24dp"/>

    <com.pyamsoft.pydroid.ui.preference.ListPreferenceCompat
        android:defaultValue="@string/lock_screen_type_default"
        android:dialogTitle="@string/lock_screen_type_title"
        android:entries="@array/lock_screen_type_names"
        android:entryValues="@array/lock_screen_type_values"
        android:key="@string/lock_screen_type_key"
        android:summary="@string/lock_screen_type_summary"
        android:title="@string/lock_screen_type_title"
        app:iconCompat="@drawable/ic_lock_type_24dp"/>

    <com.pyamsoft.pydroid.ui.preference.CheckBoxPreferenceCompat
        android:defaultValue="@bool/install_listener_default"
        android:key="@string/install_listener_key"
        android:summaryOff="@string/install_listener_summary_unchecked"
        android:summaryOn="@string/install_listener_summary_checked"
        android:title="@string/install_listener_title"
        app:iconCompat="@drawable/ic_new_releases_24dp"/>

    <com.pyamsoft.pydroid.ui.preference.PreferenceCompat
        android:key="@string/clear_db_key"
        android:summary="@string/clear_db_summary"
        android:title="@string/clear_db_title"
        app:iconCompat="@drawable/ic_warning_24dp"/>

  </PreferenceCategory>

</PreferenceScreen>
