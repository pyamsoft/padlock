<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pyamsoft.padlock">

  <!-- For accessibility service -->
  <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE"/>

  <application
      android:name=".PadLock"
      android:allowBackup="true"
      android:fullBackupContent="@xml/backup_config"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:theme="@style/Theme.PadLock.Light">

    <!-- Main Activity -->
    <activity
        android:name=".main.MainActivity"
        android:excludeFromRecents="false"
        android:exported="true"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:noHistory="false"
        android:theme="@style/Theme.PadLock.Light.Splash">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <!-- Lock Screen Activity -->
    <activity
        android:name=".lock.LockScreenActivity"
        android:excludeFromRecents="true"
        android:exported="false"
        android:launchMode="singleTop"
        android:noHistory="true">

      <!-- Sets a default width/height for the lock screen when in freeform mode -->
      <!--suppress AndroidElementNotAllowed -->
      <layout
          android:defaultHeight="500dp"
          android:defaultWidth="600dp"
          tools:ignore="UnusedAttribute"/>

    </activity>

    <!-- Accessibility Service -->
    <service
        android:name=".service.PadLockService"
        android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
      <intent-filter>
        <action android:name="android.accessibilityservice.AccessibilityService"/>
      </intent-filter>
      <meta-data
          android:name="android.accessibilityservice"
          android:resource="@xml/padlock"/>
    </service>

    <service
        android:name=".service.RecheckService"
        android:exported="false"/>

    <provider
        android:name=".PadLockSingleInitProvider"
        android:authorities="com.pyamsoft.padlock.PadLockSingleInitProvider"
        android:exported="false"
        android:syncable="false"/>

  </application>

</manifest>
