<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <LinearLayout
      android:id="@+id/lock_info_fauxbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?attr/colorPrimary"
      android:orientation="horizontal"
      >

    <ImageView
        android:id="@+id/lock_info_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/blank"
        android:padding="16dp"
        android:tint="@android:color/white"
        />

    <TextView
        android:id="@+id/lock_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:padding="16dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        />

  </LinearLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="16dp"
      >

    <ImageView
        android:id="@+id/lock_info_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:contentDescription="@string/blank"
        />

    <TextView
        android:id="@+id/lock_info_package_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@id/lock_info_icon"
        android:layout_toRightOf="@id/lock_info_icon"
        android:text="@string/package_name"
        />

    <TextView
        android:id="@+id/lock_info_package_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@id/lock_info_package_label"
        android:layout_toRightOf="@id/lock_info_package_label"
        android:ellipsize="marquee"
        android:gravity="end|right"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/lock_info_system_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lock_info_package_label"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@id/lock_info_icon"
        android:layout_toRightOf="@id/lock_info_icon"
        android:text="@string/system"
        />

    <TextView
        android:id="@+id/lock_info_system"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/lock_info_package_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/lock_info_package_name"
        android:layout_below="@id/lock_info_package_name"
        android:layout_toEndOf="@id/lock_info_system_label"
        android:layout_toRightOf="@id/lock_info_system_label"
        android:ellipsize="marquee"
        android:gravity="end|right"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        />

  </RelativeLayout>

  <android.support.v7.widget.SwitchCompat
      android:id="@+id/lock_info_toggleall"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="16dp"
      android:text="@string/toggle_all"
      android:textAppearance="?android:attr/textAppearanceMedium"
      />

  <android.support.v7.widget.RecyclerView
      android:id="@+id/lock_info_recycler"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />

</LinearLayout>
