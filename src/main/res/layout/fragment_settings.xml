<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >

      <TextView
          android:id="@+id/settings_ignoretime_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />

      <RadioGroup
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:paddingEnd="0dp"
          android:paddingLeft="8dp"
          android:paddingRight="0dp"
          android:paddingStart="8dp"
          >

        <RadioButton
            android:id="@+id/settings_ignoretime_radio_none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/do_not_ignore"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />

        <RadioButton
            android:id="@+id/settings_ignoretime_radio_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ignore_for_5_minutes"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />

        <RadioButton
            android:id="@+id/settings_ignoretime_radio_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ignore_for_10_minutes"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />

        <RadioButton
            android:id="@+id/settings_ignoretime_radio_thirty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ignore_for_30_minutes"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />

      </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >

      <TextView
          android:id="@+id/settings_timeout_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />

      <RadioGroup
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:paddingEnd="0dp"
          android:paddingLeft="8dp"
          android:paddingRight="0dp"
          android:paddingStart="8dp"
          >

        <RadioButton
            android:id="@+id/settings_timeout_radio_none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/do_not_time_out"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />

        <RadioButton
            android:id="@+id/settings_timeout_radio_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/time_out_for_1_minute"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />

        <RadioButton
            android:id="@+id/settings_timeout_radio_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/time_out_for_5_minutes"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />

        <RadioButton
            android:id="@+id/settings_timeout_radio_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/time_out_for_10_minutes"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />

      </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/settings_clear_database"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/clear_database"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />

    <Button
        android:id="@+id/settings_clear_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/clear_all_settings"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />

  </LinearLayout>

</ScrollView>