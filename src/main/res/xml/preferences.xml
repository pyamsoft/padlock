<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory
      android:title="Service Settings">

    <ListPreference
        android:defaultValue="@string/ignore_time_default"
        android:dialogTitle="@string/ignore_time_title"
        android:entries="@array/ignore_time"
        android:entryValues="@array/ignore_time_entries"
        android:key="@string/ignore_time_key"
        android:summary="@string/ignore_time_summary"
        android:title="@string/ignore_time_title"/>
    />

    <ListPreference
        android:defaultValue="@string/timeout_time_default"
        android:dialogTitle="@string/timeout_time_title"
        android:entries="@array/timeout_time"
        android:entryValues="@array/timeout_time_entries"
        android:key="@string/timeout_time_key"
        android:summary="@string/timeout_time_summary"
        android:title="@string/timeout_time_title"/>
    />

    <CheckBoxPreference
        android:defaultValue="@bool/lock_package_change_default"
        android:key="@string/lock_package_change_key"
        android:summaryOff="@string/lock_package_change_summary_unchecked"
        android:summaryOn="@string/lock_package_change_summary_checked"
        android:title="@string/lock_package_change_title"/>

    <CheckBoxPreference
        android:defaultValue="@bool/lock_device_locked_default"
        android:key="@string/lock_device_locked_key"
        android:summaryOff="@string/lock_device_locked_summary_unchecked"
        android:summaryOn="@string/lock_device_locked_summary_checked"
        android:title="@string/lock_device_locked_title"/>

  </PreferenceCategory>

  <PreferenceCategory
      android:title="PadLock Settings">

    <Preference
        android:key="@string/upgrade_info_key"
        android:summary="@string/upgrade_info_summary"
        android:title="@string/upgrade_info_title"/>

    <Preference
        android:key="@string/clear_db_key"
        android:summary="@string/clear_db_summary"
        android:title="@string/clear_db_title"/>

    <Preference
        android:key="@string/clear_all_key"
        android:summary="@string/clear_all_summary"
        android:title="@string/clear_all_title"/>

  </PreferenceCategory>

</PreferenceScreen>