<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory
      android:title="Service Settings">

    <ListPreference
        android:defaultValue="@string/ignore_time_default"
        android:dialogTitle="@string/ignore_time_title"
        android:entries="@array/ignore_time"
        android:entryValues="@array/ignore_time_entries"
        android:key="@string/ignore_time_key"
        android:summary="@string/ignore_time_summary"
        android:title="@string/ignore_time_title"/>
    />

    <ListPreference
        android:defaultValue="@string/timeout_time_default"
        android:dialogTitle="@string/timeout_time_title"
        android:entries="@array/timeout_time"
        android:entryValues="@array/timeout_time_entries"
        android:key="@string/timeout_time_key"
        android:summary="@string/timeout_time_summary"
        android:title="@string/timeout_time_title"/>
    />

  </PreferenceCategory>

</PreferenceScreen>