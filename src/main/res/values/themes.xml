<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="Base.Theme.PadLock.Light" parent="@style/Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/blue500</item>
    <item name="colorPrimaryDark">@color/blue700</item>
    <item name="colorAccent">@color/orangeA200</item>
  </style>

  <style name="Base.Theme.PadLock.Light.Crash" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorPrimary">@color/blue500</item>
    <item name="colorPrimaryDark">@color/blue700</item>
    <item name="colorAccent">@color/orangeA200</item>
  </style>

  <style name="Base.Theme.PadLock.Light.Lock" parent="@style/Base.Theme.PadLock.Light">
    <item name="colorPrimary">@color/blue500</item>
    <item name="colorPrimaryDark">@color/blue700</item>
    <item name="colorAccent">@color/orangeA200</item>
  </style>

  <style name="Base.Theme.PadLock.Light.PINEntry"
      parent="@style/Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorPrimary">@color/blue500</item>
    <item name="colorPrimaryDark">@color/blue700</item>
    <item name="colorAccent">@color/orangeA200</item>
  </style>

  <style name="Base.Theme.PadLock.Light.Menu" parent="@style/ThemeOverlay.AppCompat.Light" tools:keep="@style/Base_Theme_PadLock_Light_Menu">
    <item name="colorPrimary">@color/blue500</item>
    <item name="colorPrimaryDark">@color/blue700</item>
    <item name="colorAccent">@color/orangeA200</item>
  </style>

  <!-- Normal App Theme -->
  <style name="Theme.PadLock.Light" parent="@style/Base.Theme.PadLock.Light"/>

  <!-- Lock Screen -->
  <style name="Theme.PadLock.Light.Lock" parent="@style/Base.Theme.PadLock.Light.Lock">
    <item name="android:background">?attr/colorPrimary</item>
    <item name="android:buttonBarButtonStyle">@style/Style.PadLock.Lock.KeyPad</item>
    <item name="android:textViewStyle">@style/Style.PadLock.Lock.Header</item>
  </style>

  <!-- Lock Screen Menu-->
  <style name="Theme.PadLock.Light.Menu" parent="@style/Base.Theme.PadLock.Light.Menu" tools:keep="@style/Theme_PadLock_Light_Menu">
    <item name="android:background">@null</item>
    <item name="android:textViewStyle">@android:style/TextAppearance.Medium</item>
    <item name="android:colorBackground">@android:color/white</item>
  </style>

  <!-- PIN Entry Dialog -->
  <style name="Theme.PadLock.Light.PINEntry" parent="@style/Base.Theme.PadLock.Light.PINEntry">
    <item name="android:background">@android:color/white</item>
    <item name="android:buttonBarButtonStyle">@style/Style.PadLock.PINEntry.KeyPad</item>
    <item name="android:textViewStyle">@style/Style.PadLock.PINEntry.Header</item>
  </style>

  <!-- Splash screen-->
  <style name="Theme.PadLock.Light.Splash" parent="@style/Base.Theme.PadLock.Light"/>

  <!-- Crash Dialog theme-->
  <style name="Theme.PadLock.Light.Crash" parent="@style/Base.Theme.PadLock.Light.Crash"/>

</resources>
