<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pyamsoft.padlock">

  <!-- Start on Boot -->
  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

  <!-- For accessibility service -->
  <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE"/>

  <application
      android:name=".PadLock"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:theme="@style/Theme.PadLock.Light">

    <!-- Main Activity -->
    <activity
        android:name=".app.main.MainActivity"
        android:excludeFromRecents="false"
        android:exported="true"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:noHistory="false"
        android:theme="@style/Theme.PadLock.Light.Splash">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <!-- Lock Screen Activity -->
    <activity
        android:name=".app.lock.LockScreenActivity"
        android:excludeFromRecents="true"
        android:exported="false"
        android:launchMode="singleTop"
        android:noHistory="true"
        android:windowSoftInputMode="stateVisible"/>


    <!-- Accessibility Service -->
    <service
        android:name=".app.service.PadLockService"
        android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
      <intent-filter>
        <action android:name="android.accessibilityservice.AccessibilityService"/>
      </intent-filter>
      <meta-data
          android:name="android.accessibilityservice"
          android:resource="@xml/padlock"/>
    </service>

    <!-- Framework Job Scheduler -->
    <service
        android:name=".app.service.job.PadLockFrameworkJobSchedulerService"
        android:permission="android.permission.BIND_JOB_SERVICE"/>

    <!-- GCM Job Scheduler -->
    <service
        android:name=".app.service.job.PadLockGCMJobSchedulerService"
        android:exported="true"
        android:permission="com.google.android.gms.permission.BIND_NETWORK_TASK_SERVICE">
      <intent-filter>
        <action android:name="com.google.android.gms.gcm.ACTION_TASK_READY"/>
      </intent-filter>
    </service>

    <provider
        android:name=".PadLockSingleInitProvider"
        android:authorities="com.pyamsoft.padlock.PadLockSingleInitProvider"
        android:exported="false"
        android:syncable="false"/>

    <receiver
        android:name=".app.receiver.ApplicationInstallReceiver"
        android:enabled="true"
        android:exported="false">
      <intent-filter>
        <action android:name="android.intent.action.PACKAGE_ADDED"/>
        <data android:scheme="package"/>
      </intent-filter>
    </receiver>

  </application>

</manifest>
